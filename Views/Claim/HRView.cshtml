@{
}
<h2>Approved Claims</h2>
<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Total Amount</th>
            <th>Claim Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimsId</td>
                <td>@claim.LecturerId</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.ClaimDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="GenerateReport" class="btn btn-primary">Generate Report</a>
